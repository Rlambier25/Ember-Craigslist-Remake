{{#if addNewPost}}
  <h1>New Rental</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input value=name id="name"}}
      </div>

      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="category">Category</label>
        {{input value=category id="category"}}
      </div>

      <div class="form-group">
        <label for="description">Post Description</label>
        {{input value=description id="description"}}
      </div>

      <div class="form-group">
        <label for="price">Image URL</label>
        {{input value=price id="price"}}
      </div>

      <div class="form-group">
        <label for="price">Price</label>
        {{input value=price id="price"}}
      </div>

      <button {{action 'save1'}}>Save</button>
    </form>
  </div>
  {{else}}
    <button> {{action 'postFormShow'}}>New Post</button>
{{/if}}
