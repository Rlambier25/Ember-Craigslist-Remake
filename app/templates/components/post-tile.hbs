<li>{{post.title}} {{post.image}} {{post.description}}
    {{#if isImageShowing }}
       <p><img src={{post.image}} alt={{post.type}} {{action 'imageHide'}}></p>
     {{else}}
       <button {{action 'imageShow'}}>Show image</button>
    {{/if}}
    {{update-post post=post update="update"}}
    <button {{action 'delete' post}}>Delete</button>
</li>
