{{#if updatePostForm}}
  <h4>Update {{post.name}}'s {{post.type}}'</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input value=name id="name" placeholder=post.name}}
      </div>

      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=post.title}}
      </div>

      <div class="form-group">
        <label for="category">Category</label>
        {{input value=category id="category" placeholder=post.category}}
      </div>

      <div class="form-group">
        <label for="description">Post Description</label>
        {{input value=description id="description" placeholder=post.description}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image" placeholder=post.image}}
      </div>

      <div class="form-group">
        <label for="price">Price</label>
        {{input value=price id="price" placeholder=post.price}}
      </div>

      <button {{action 'update'}}>Save</button>
    </form>
  </div>
  {{else}}
    <button> {{action 'updatePostForm'}}>Update</button>
{{/if}}
